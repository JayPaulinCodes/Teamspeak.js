{
    "include": [ "src/**/*.ts" ],
    "compilerOptions": {
        // Type Checking
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        // "noUnusedParameters": true,
        "strict": true,
        "strictNullChecks": true,
        "useUnknownInCatchVariables": true, // https://www.typescriptlang.org/tsconfig#useUnknownInCatchVariables

        // Modules
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@teamspeak.js/client/*": [ "client/*" ],
            "@teamspeak.js/errors/*": [ "errors/*" ],
            "@teamspeak.js/managers/*": [ "managers/*" ],
            "@teamspeak.js/structures/*": [ "structures/*" ],
            "@teamspeak.js/utils/*": [ "utils/*" ],
            "@teamspeak.js/websocket/*": [ "websocket/*" ]
        },

        // Emit
        "declaration": true,
        "outDir": "./lib",

        // JS Support

        // Editor Support

        // Interop Constraints
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        // Backwards Compatibility

        // Language & Environment
        "target": "es2022",

        // Compiler Diagnostics

        // Projects

        // Output Formatting

        // Completeness
        "skipLibCheck": true

        // Command Line

        // Watch Options
    }
}
